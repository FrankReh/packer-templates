{
    "builders": [
        {
            "type": "virtualbox-iso",
            "guest_os_type": "FreeBSD_64",
            "vm_name": "hardenedbsd",
            "iso_url": "http://installer.hardenedbsd.org/hardened_11_stable_master-LAST/HardenedBSD-11-STABLE-v1100056.7-amd64-disc1.iso",
            "iso_checksum_type": "sha512",
            "iso_checksum_url": "http://installer.hardenedbsd.org/hardened_11_stable_master-LAST/CHECKSUM.SHA512",
            "ssh_username": "vagrant",
            "ssh_password": "vagrant",
            "ssh_wait_timeout": "1800s",
            "disk_size": 8000,
            "guest_additions_mode": "disable",
            "vboxmanage": [ ["modifyvm", "{{.Name}}", "--memory", "1024"] ],
            "http_directory": "http",
            "boot_command": [
                "s<enter><wait10><wait10>",
                "<enter><wait>",
                "mdmfs -s 100m md1 /tmp<enter><wait>",
                "dhclient -p /tmp/dhclient.pid -l /tmp/dhclient.lease em0<enter><wait10>",
                "fetch -o /tmp/p http://{{ .HTTPIP }}:{{ .HTTPPort }}/p<enter><wait5>",
                "bsdinstall script /tmp/p<enter>"
            ],
            "shutdown_command": "sudo halt -p"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "execute_command": "echo 'vagrant' | {{.Vars}} sudo -ES sh '{{.Path}}'",
            "scripts": [
                "ssh-configure-vagrant-key.hardenedbsd.sh",
                "cleanup.hardenedbsd.sh"
            ]
        }
    ],
    "post-processors": [
        {
            "type": "vagrant",
            "output": "hardenedbsd-{{.Provider}}.box",
            "compression_level": "9",
            "vagrantfile_template": "Vagrantfile"
        }
    ]
}
